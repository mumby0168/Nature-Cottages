@model NatureCottages.ViewModels.Admin.ActiveAttractionsViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "Layout/_Layout";
}


<h3>Active Attractions</h3>

<div align="center">


    <table id="ActiveAttractionsTable" class="mdl-data-table active-cottages-table">
        <caption>
            <div>
                <a class="mdl-button--colored mdl-button--raised mdl-button table-header-button" href="@Url.Action("LoadAttractionForm", "Form")">Add Attraction</a>
                <h2><i class="fas fa-home"></i> Active Cottages</h2>
            </div>
        </caption>
        <thead>
            <tr>
                <th style="width: 10%;">Cottage Name</th>
                <th style="width: 10%;">Cottage Description </th>
                <th style="width: 5%;">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attraction in Model.Attractions)
            {
                <tr>    
                    <td>
                        <p> @attraction.Name</p>
                    </td>
                    <td style="overflow:scroll; max-width: 300px;">
                        <p> @attraction.Description</p>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "LoadAttractionEditForm", "Form", new { id = attraction.Id }, new { @class = "mdl-button--accent mdl-button--raised mdl-button" })

                        @if (attraction.IsVisibleToClient)
                        {
                            @Html.ActionLink("Hide from Clients", "MakeAttractionNonVisible", "Admin", new { id = attraction.Id }, new { @class = "mdl-button--accent mdl-button--raised mdl-button" })
                        }
                        else
                        {
                            @Html.ActionLink("Show to Clients", "MakeAttractionVisible", "Admin", new { id = attraction.Id }, new { @class = "mdl-button--accent mdl-button--raised mdl-button" })
                        }
                    </td>
                </tr>
            }
    </table>

</div>
