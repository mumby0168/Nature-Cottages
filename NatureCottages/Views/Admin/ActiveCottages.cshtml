@model NatureCottages.ViewModels.Admin.ActiveCottagesViewModel
@*
     
*@

@{
    Layout = "Layout/_Layout";
}



<a class="back-to-admin-button clickable-anchor" href="@Url.Action("Index", "Admin")"><i class="fa fa-3x fa-arrow-circle-left"></i></a>


<div class="container" align="center">   
    <br/>
    <h1 style="margin-top: 5px;"><i class="fas fa-home"></i> Cottage Management</h1>  
           
    <div class="container">
        
        
        <a href="@Url.Action("LoadCottageForm", "Form")" class="clickable-anchor add-cottage-button"><i class="fa fa-3x fa-plus-square"></i></a>


        <table id="ActiveCottagesTable" class="table mdl-shadow--4dp">
            <thead>
            <tr>
                <th style="width: 10%;">Cottage Name</th>
                <th style="width: 5%;">Operations</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var cot in Model.Cottages)
            {
                <tr>
                    <td>
                        <p> @cot.Name</p>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "LoadCottageEditForm", "Form", new {cottid = cot.Id}, new {@class = "mdl-button--accent mdl-button--raised mdl-button"})

                        @if (@cot.IsVisibleToClient)
                        {
                            @Html.ActionLink("Hide from Clients", "MakeCottageNonVisible", "Admin", new {cottid = cot.Id}, new {@class = "mdl-button--accent mdl-button--raised mdl-button"})
                        }
                        else
                        {
                            @Html.ActionLink("Show to Clients", "MakeCottageVisible", "Admin", new {cottid = cot.Id}, new {@class = "mdl-button--accent mdl-button--raised mdl-button"})
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
