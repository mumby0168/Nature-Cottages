@model NatureCottages.ViewModels.Forms.AttractionFormViewModel

@{
    Layout = "Layout/_Layout";
}

<div align="center" style="margin: 5%;">

    <h3>Add Cottage</h3>

    <form method="post" enctype="multipart/form-data" action="/Form/SubmitAttractionForm">

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.LabelFor(m => Model.Name, new { @class = "mdl-textfield__label" })
            @Html.TextBoxFor(m => Model.Name, new { @class = "mdl-textfield__input" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <br />
        
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            @Html.LabelFor(m => Model.Link, new { @class = "mdl-textfield__label" })
            @Html.TextBoxFor(m => Model.Link, new { @class = "mdl-textfield__input" })
            @Html.ValidationMessageFor(m => m.Link)
        </div>
      
        <br />

        <div class="mdl-js-textfield mdl-textfield mdl-textfield--floating-label">
            @Html.LabelFor(m => m.Description, new { @class = "mdl-textfield__label" })
        @Html.TextAreaFor(m => m.Description, new { @class = "mdl-textfield__input" })
        @Html.ValidationMessageFor(m => m.Description)
        
        <br/>
        
        </div>
        
        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="Attraction_IsVisibleToClient">
            @Html.CheckBoxFor(m => m.IsVisibleToClient, new { @class = "mdl-checkbox__input" })
            <span class="mdl-checkbox__label">Visible To Client?</span>
        </label>
                
     
        <br/>
        <br />
            
        <div class="">
            <input name="images" type="file" multiple accept=".png,.jpeg,.jpg" />
        </div>

        <input type="submit" />

        <br />
    </form>

</div>