@model NatureCottages.ViewModels.Availability.AvailabilityCalendarViewModel




<div id="calendar-holder" class="mdl-shadow--8dp">
    
    <div class="mdl-grid calendar-control-area">
        <div class="mdl-cell--4-col mdl-cell calendar-text-center center-outer" >
            <div class="center-inner calendar-arrow-div" id="CalendarBack">
                <i class="fas fa-long-arrow-alt-left fa-5x"></i>
            </div>            
        </div>
        <div class="mdl-cell--4-col mdl-cell calendar-text-center">
            <h2>@Model.Month @Model.Year</h2>
        </div>
        <div class="mdl-cell--4-col mdl-cell calendar-text-center center-outer" >
            <div class="center-inner calendar-arrow-div" id="CalendarForward">
                <i class="fas fa-long-arrow-alt-right fa-5x"></i>
            </div>
        </div>
    </div>

    <div class="mdl-grid">
        @for (int i = 0; i < Model.DaysInMonth.Count; i++)
        {

            string className = "";
            className = Model.DaysInMonth[i].IsBooked ? "booked-date" : "unbooked-date";


        <div class="mdl-cell--1-col mdl-cell mdl-shadow--4dp standard-date @className">
            <h2>@Model.DaysInMonth[i].Day</h2>
            @if (@Model.DaysInMonth[i].IsBooked)
            {
                <div style="color: red">
                    <i class="fa fa-window-close"></i>
                </div>
            }
        </div>
        }

    </div>
</div>
