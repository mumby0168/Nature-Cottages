@using NatureCottages.Database.Domain
@using NatureCottages.ViewModels.Home
@model NatureCottages.ViewModels.Home.HomeViewModel
@{
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

    <div class="center-vetical-horizontal-outer" id="MainImageArea">
        <div class="center-vetical-horizontal-inner home-page-container">            
        </div>      
    </div>

<br/>

<div style="text-align: center">
    <h4 style="margin-left: auto; margin-right: auto;">Our Cottages</h4>
    <hr/>
</div>

<div align="center">

<div id="SimpleCottageGrid" class="container">
    <div class="row">
        @foreach (var cottage in Model.Cottages)
        {
            <div class="col-4" align="center">
                @await Html.PartialAsync("_BasicCottageCardV2", new CottageCardViewModel() { Cottage = cottage })
            </div>

        }
    </div>
</div>
    </div>