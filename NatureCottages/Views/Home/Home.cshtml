@using NatureCottages.Database.Domain
@using NatureCottages.ViewModels.Home
@model NatureCottages.ViewModels.Home.HomeViewModel
@{
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<div id="MainImageArea">
    
</div>

<br/>

<div style="text-align: center">
    <h4 style="margin-left: auto; margin-right: auto;">Some of our Cottages</h4>
    <hr/>
</div>


<div id="SimpleCottageGrid" class="mdl-grid">
    @foreach (var cottage in Model.Cottages)
    {
        <div class="mdl-cell--4-col mdl-cell" align="center">
            @await Html.PartialAsync("_BasicCottageCardV2", new CottageCardViewModel() { Cottage = cottage })
        </div>
        
    }
</div>
