@using NatureCottages.ViewModels.Availability
@model NatureCottages.ViewModels.Availability.BookableCottageViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    var images = Model.Cottage.ImageGroup.Images;
    var imgpath = images[0].ImagePath;
}


<div sliderIndex="0"   class=" mdl-card cottage-card mdl-shadow--8dp">
    <div class="mdl-card__title mdl-card--expand">        
        <div class="card-imager-wrapper-div">
        @foreach (var image in images)
        {
            <img class="card-img" src="@image.ImagePath"/>
        }

            <button id="right-slider-button" style="float: right;  margin: 2px;" class="right-slider-button mdl-button mdl-js-button mdl-button--fab mdl-button--colored">
                <i class="material-icons">arrow_forward</i>
            </button>

            <button style="float: left; margin: 2px;" class="left-slider-button mdl-button mdl-js-button mdl-button--fab mdl-button--colored">
                <i class="material-icons">arrow_back</i>
            </button>

        </div>

    </div>
    <div class="mdl-card__supporting-text">
        <h2 class="mdl-card__title-text">@Model.Cottage.Name</h2>
        <br />
        <p>@Model.Cottage.Description</p>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        @Html.ActionLink("Enquire Now", "LoadEnquirePage", "Availability", new {cottageid = Model.Cottage.Id}, new {@class = "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" })               
    </div>
</div>

