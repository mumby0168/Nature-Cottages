@model NatureCottages.ViewModels.Availability.BookableCottageViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    string imgpath = Model.Cottage.ImageLocation;
}


<div class=" mdl-card cottage-card mdl-shadow--8dp">
    <div class="mdl-card__title mdl-card--expand">
        <img class="card-img" src="@imgpath" />
    </div>
    <div class="mdl-card__supporting-text">
        <h2 class="mdl-card__title-text">@Model.Cottage.Name</h2>
        <br />
        <p>@Model.Cottage.Description</p>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        @Html.ActionLink("Enquire Now", "LoadEnquirePage", "Availability", new {cottageid = Model.Cottage.Id}, new {@class = "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" })        

    </div>
</div>