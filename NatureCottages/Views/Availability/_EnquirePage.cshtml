@using NatureCottages.Database.Domain
@using NatureCottages.ViewModels.Availability
@model NatureCottages.ViewModels.Availability.EnquireFormViewModel

@{
    Layout = "Layout/_Layout";
}


<div align="center">
         
    <div class="mdl-shadow--8dp" align="center" style="width: 75%; padding: 2%; margin: 2%;">
        <h2>Enquiry Details</h2>
        <div class="mdl-grid" align="center">

            <div class="mdl-cell mdl-cell--6-col center-outer">
                <div class="center-inner">

                    @using (Html.BeginForm("Enquire", "Availability", FormMethod.Post, new { style = "float: left;" }))
                    {
                        <h4>Personal Details</h4>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            @Html.LabelFor(m => Model.Booking.Customer.FullName, new { @class = "mdl-textfield__label" })
                            @Html.TextBoxFor(m => Model.Booking.Customer.FullName, new { @class = "mdl-textfield__input" })
                            @Html.ValidationMessageFor(m => m.Booking.Customer.FullName)
                        </div>

                        <br />                                           

                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            @Html.LabelFor(m => Model.Booking.Customer.PhoneNumber, new { @class = "mdl-textfield__label" })
                            @Html.TextBoxFor(m => Model.Booking.Customer.PhoneNumber, new { @class = "mdl-textfield__input" })
                            @Html.ValidationMessageFor(m => m.Booking.Customer.PhoneNumber)
                        </div>

                        <h4>Booking Details</h4>

                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            @Html.LabelFor(m => Model.Booking.DateFrom, new { @class = "mdl-textfield__label" })
                            @Html.TextBoxFor(m => Model.Booking.DateFrom, new { @class = "mdl-textfield__input", @type = "date", placeholder = "Date Here." })
                            @Html.ValidationMessageFor(m => m.Booking.DateFrom)
                        </div>

                        <br />

                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            @Html.LabelFor(m => Model.Booking.DateTo, new { @class = "mdl-textfield__label" })
                            @Html.TextBoxFor(m => Model.Booking.DateTo, new { @class = "mdl-textfield__input", @type = "date", placeholder = "Date Here." })
                            @Html.ValidationMessageFor(m => m.Booking.DateTo)
                        </div>

                        <br />

                        @Html.HiddenFor(m => m.Booking.CottageId)
                        <br/>

                        <button type="submit" class="mdl-button mdl-button--colored mdl-button--raised">Submit</button>
                    }

                </div>

            </div>

            <div class="mdl-cell mdl-cell--6-col center-outer" align="center">
                <div class="center-inner">
                    <div class="center-outer">
                        <div style="margin: 5%;" class=" mdl-card cottage-card mdl-shadow--8dp center-inner">
                            <div class="mdl-card__title mdl-card--expand">
                                <img class="visible-card-image" src="@Model.Booking.Cottage.ImageGroup.Images[0].ImagePath" />
                            </div>
                            <div class="mdl-card__supporting-text">
                                <h2 class="mdl-card__title-text">@Model.Booking.Cottage.Name</h2>
                                <br />
                                <p>@Model.Booking.Cottage.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mdl-cell mdl-cell--12-col">
                @await Html.PartialAsync("AvailabilityViewer", new AvailabilityViewerViewModel(){Cottage = Model.Booking.Cottage})
            </div>

        </div>
    </div>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>