@using NatureCottages.Database.Domain
@model NatureCottages.ViewModels.Availability.EnquireFormViewModel

@{
    Layout = "Layout/_Layout";
}


<div align="center">
<div class="mdl-shadow--8dp" align="center" style="width: 75%; padding: 2%">        
    <div class="mdl-grid" align="center">
        <div class="mdl-cell mdl-cell--2-col"></div>

        <div class="mdl-cell mdl-cell--4-col">

            @using (Html.BeginForm("Enquire", "Availability", FormMethod.Post, new { style = "float: left;" }))
            {
                <h3>Personal Details</h3>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(m => Model.Booking.Customer.FullName, new { @class = "mdl-textfield__label" })
                    @Html.TextBoxFor(m => Model.Booking.Customer.FullName, new { @class = "mdl-textfield__input" })
                </div>

                <br />

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(m => Model.Booking.Customer.Email, new { @class = "mdl-textfield__label" })
                    @Html.TextBoxFor(m => Model.Booking.Customer.Email, new { @class = "mdl-textfield__input" })
                </div>

                <br />

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(m => Model.Booking.Customer.PhoneNumber, new { @class = "mdl-textfield__label" })
                    @Html.TextBoxFor(m => Model.Booking.Customer.PhoneNumber, new { @class = "mdl-textfield__input" })
                </div>



                <h3>Booking Details</h3>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(m => Model.Booking.DateFrom, new { @class = "mdl-textfield__label" })
                    @Html.TextBoxFor(m => Model.Booking.DateFrom, new { @class = "mdl-textfield__input", @type = "date", placeholder = "Date Here." })
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.LabelFor(m => Model.Booking.DateTo, new { @class = "mdl-textfield__label" })
                    @Html.TextBoxFor(m => Model.Booking.DateTo, new { @class = "mdl-textfield__input", @type = "date", placeholder = "Date Here."})
                </div>

                <br />

                @Html.HiddenFor(m => m.Booking.CottageId)

                <button type="submit" class="mdl-button">Submit</button>
            }
        </div>

        <div class="mdl-cell mdl-cell--4-col">
            <h3>Cottage</h3>
            <div style="margin: 5%;" class=" mdl-card cottage-card mdl-shadow--8dp">
                <div class="mdl-card__title mdl-card--expand">
                    <img class="card-img" src="@Model.Booking.Cottage.ImageLocation" />
                </div>
                <div class="mdl-card__supporting-text">
                    <h2 class="mdl-card__title-text">@Model.Booking.Cottage.Name</h2>
                    <br />
                    <p>@Model.Booking.Cottage.Description</p>
                </div>
            </div>
        </div>

        <div class="mdl-cell mdl-cell--2-col"></div>
    </div>     
</div>
</div>