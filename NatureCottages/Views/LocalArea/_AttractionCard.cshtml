@using System.IO
@using Microsoft.AspNetCore.Hosting
@using NatureCottages.ViewModels.Availability
@model NatureCottages.ViewModels.Availability.AttractionCardViewModel

@{
    var image = Model.Attraction.ImageGroup.Images.FirstOrDefault();

    string imgpath = "";

    if (image != null)
    {
        imgpath = image.ImagePath;
    }


  }


<div class="attraction-card mdl-card mdl-shadow--8dp">
    <div class="mdl-card__title mdl-card--expand">
        <div class="card-imager-wrapper-div">
            <img class="attraction-card-img" src="@imgpath"/>
        </div>
    </div>
    <div class="mdl-card__supporting-text">
        <h2 class="mdl-card__title-text">@Model.Attraction.Name</h2>        
        <br/>
        <p>@Model.Attraction.Description</p>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="@Model.Attraction.Link">
            More Info.
        </a>
    </div>
</div>