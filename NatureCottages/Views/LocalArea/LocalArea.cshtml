@{
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";

}

<script async defer src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2"></script>

@using NatureCottages.ViewModels.Availability
@model NatureCottages.ViewModels.LocalArea.LocalAreaViewModel

<br/>
<div align="center">
    <h1>Local Area</h1>
    <hr />
</div>

<div style="height: 100%;">    
    <div class="container" style="width: 90%">
        <div class="row">

            <div class="col-7">
                <div class="grid">
                    <div class="row">
                        @foreach (var att in Model.Attractions)
                        {
                            <div class="col-6" align="center">
                                @{
                                    AttractionCardViewModel vm = new AttractionCardViewModel();
                                    vm.Attraction = att;
                                    @await Html.PartialAsync("_AttractionCard", vm)
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-5" align="center">
                <div class="facebook-post-wrapper">
                    @foreach (var post in Model.FacebookPosts)
                    {

                        <div data-href="@post.PostUrl" class="fb-post"></div>
                        <br/>
                    }
                </div>
            </div>


        </div>
    </div>
    
    
</div>

